<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <manager>
        <logPath>log</logPath>
        <log>
            <writer0>
                <writerName>Mail</writerName>
                <writerNamespace>ZendExt_Log_Writer</writerNamespace>
                <writerParams>
                    <to>development@monits.com</to>
                    <from>noreply@monits.com</from>
                    <subject>Critical Cron Error</subject>
                    <transport>smtp</transport>
                    <host>smtp.gmail.com</host>
                    <config>
                        <name>monits.com</name>
                        <port>587</port>
                        <ssl>tls</ssl>
                        <auth>login</auth>
                        <username></username>
                        <password></password>
                    </config>
                </writerParams>
                <filterName>Priority</filterName>
                <filterParams>
                    <priority>2</priority>
                </filterParams>
            </writer0>
            <writer1>
                <writerName>Stream</writerName>
                <writerParams>
                    <stream>test.log</stream>
                </writerParams>
            </writer1>
        </log>
        <processDir>./</processDir>
        <processNamespace>ZendExt_</processNamespace>
    </manager>
    <process>
        <logPath>log</logPath>
        <data>
            <dir>data/</dir>
        </data>
        <configDir>src/main/resources/config/</configDir>
        <pid>
            <file>process.pid</file>
            <path>pid/</path>
        </pid>
		<outputFile>php://stdout</outputFile>
	</process>
</zend-config>
